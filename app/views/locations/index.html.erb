<%= form_tag do %>
    City:
    <%= text_field_tag :city %>
    <br>
    Place name:
    <%= text_field_tag :name%>
    <br>
    or
    Zip code
    <%= text_field_tag :zipcode %>
    <%= submit_tag "Search", :class=>'button' %>


<% end %>

<% if @places.any? %>
    <table>
          <tr>
          <th>Name</th>
           <th>address</th>
            <th>postal code</th>
        </tr>



      <% @places.each do |place| %>
          <tr>
            <td><%=place["name"]   %> </td>
            <td><%=place["address"]   %> </td>
            <td><%=place["postcode"]   %> </td>
          </tr>
      <%end %>
    </table>
<%end %>

